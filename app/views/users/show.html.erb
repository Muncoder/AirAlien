<div class="row">
	<div class="col-md-3">
		<div class="well">
			<%= image_tag avatar_url(@user), class: "avatar-medium" %>
			<div class="row-space-2">
				<% if current_user != @user %>
					<%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post', class: "btn btn-primary btn-block" %>
				
				<% end %>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				Verifications
			</div>
			<div class="panel-body">
				Email Address <br>
				Phone Number
			</div>
		</div>
	</div>

	<div class="col-md-9">
		<h1> <%= current_user.fullname %> </h1> 
	</div>
</div>