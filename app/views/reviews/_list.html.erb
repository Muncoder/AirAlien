<% if @reviews.count == 0 %>
	No reviews yet
<% else %>
	<% @reviews.order("id desc").each do |r| %>
		<hr>
		<div class="row">
			<div class="col-md-1">
				<%= image_tag avatar_url(r.user), class: "img-circle avatar-medium" %>
			</div>
			
			<div class="col-md-11">
				<strong><%= r.user.fullname %> <%= r.star %> </strong>
				<span class="pull-right">
					<%= link_to "Remove My Review", [@room, r], method: :delete, data: { confirm: "Sure to delete ?" } %>
				</span>
			</div>
			
			<div><%= r.created_at.strftime("%v") %></div>
			<div><%= r.comment %></div>

		</div>
	<% end %>
<% end %>